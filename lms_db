/*Table structure for table `transactions` */

CREATE TABLE `transactions` (
  `id` int NOT NULL AUTO_INCREMENT,
  `transaction_date` datetime DEFAULT NULL,
  `doc_no` varchar(100) DEFAULT NULL,
  `trx_key` varchar(100) DEFAULT NULL,
  `description` varchar(255) DEFAULT NULL,
  `account_code` varchar(100) DEFAULT NULL,
  `amount` decimal(10,2) DEFAULT NULL,
  `debit` decimal(10,2) DEFAULT NULL,
  `credit` decimal(10,2) DEFAULT NULL,
  `currency_code` varchar(4) DEFAULT NULL,
  `created_on` datetime DEFAULT CURRENT_TIMESTAMP,
  PRIMARY KEY (`id`),
  UNIQUE KEY `trx_key` (`trx_key`),
  KEY `currency_id` (`currency_code`),
  KEY `account_code` (`account_code`),
  CONSTRAINT `transactions_ibfk_1` FOREIGN KEY (`currency_code`) REFERENCES `currency` (`currency_code`) ON DELETE CASCADE,
  CONSTRAINT `transactions_ibfk_2` FOREIGN KEY (`account_code`) REFERENCES `control_account` (`account_code`)
) ENGINE=InnoDB AUTO_INCREMENT=5 DEFAULT CHARSET=utf8mb4 COLLATE=utf8mb4_0900_ai_ci;

