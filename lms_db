USE `lms`;

/*Table structure for table `control_account` */

CREATE TABLE `control_account` (
  `id` int NOT NULL AUTO_INCREMENT,
  `account_code` varchar(10) NOT NULL,
  `account_name` varchar(255) NOT NULL,
  `category` enum('ASSET','LIABILITY','EQUITY','INCOME','EXPENSE') DEFAULT NULL,
  `description` varchar(255) DEFAULT NULL,
  `sub_account_id` int DEFAULT NULL,
  `currency_id` int DEFAULT NULL,
  `balance` decimal(10,2) DEFAULT NULL,
  PRIMARY KEY (`id`),
  UNIQUE KEY `account_code` (`account_code`),
  UNIQUE KEY `account_name` (`account_name`),
  KEY `sub_account_id` (`sub_account_id`),
  KEY `currency_id` (`currency_id`),
  CONSTRAINT `control_account_ibfk_2` FOREIGN KEY (`sub_account_id`) REFERENCES `control_account` (`id`),
  CONSTRAINT `control_account_ibfk_3` FOREIGN KEY (`currency_id`) REFERENCES `currency` (`id`)
) ENGINE=InnoDB AUTO_INCREMENT=5 DEFAULT CHARSET=utf8mb4 COLLATE=utf8mb4_0900_ai_ci;

