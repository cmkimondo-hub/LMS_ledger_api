<Configuration status="WARN">
  <Appenders>
    <!-- Console Appender -->
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
    </Console>

    <!-- Rolling File Appender -->
    <RollingFile name="Roller" fileName="logs/ledger.log" filePattern="logs/ledgerLog.%i.log.gz">
      <PatternLayout>
        <Pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n</Pattern>
      </PatternLayout>
      <Policies>
        <SizeBasedTriggeringPolicy size="10 MB"/>
      </Policies>
      <DefaultRolloverStrategy max="10"/> <!-- Keep up to 10 backups -->
    </RollingFile>
  </Appenders>


  <Loggers>

    <!-- Ledger Main App -->
    <Logger name="ke.fintech.ledger_api" level="debug" additivity="false">
      <AppenderRef ref="Console"/>
      <AppenderRef ref="Roller"/>
    </Logger>

    <!-- Springboot -->
    <Logger name="org.springframework" level="info"/>
    <Logger name="org.hibernate" level="warn"/>

    <!-- Root logger -->
    <Root level="info">
      <AppenderRef ref="Console"/>
      <AppenderRef ref="Roller"/>
    </Root>

  </Loggers>

</Configuration>
